
aws_region = "eu-west-1"
environment = "dev"
owner = "your-name"
allowed_cidr = "203.0.113.4/32" # set to your public IP for SSH access
public_key_path = "~/.ssh/terraform_key.pub"
private_key_path = "~/.ssh/terraform_key"


# create two small instances for practice
instances = {
web-1 = { instance_type = "t3.micro", name = "web-1" }
web-2 = { instance_type = "t3.micro", name = "web-2" }
}


# WARNING: for demo only â€” putting this in a tfvars file stores it in state and
# is not for real production secrets
demo_secret_value = "my-very-secret-value"
